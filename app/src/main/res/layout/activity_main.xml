<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="411dp"
            android:layout_height="331dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="30sp"
                android:paddingTop="30dp" android:text="Bienvenidos a la evaluación"/>
        <TextView
                android:text="Para iniciar su evaluacion clic en iniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="18sp"
                android:paddingLeft="10dp" android:paddingBottom="10dp" android:paddingTop="15dp"/>
        <Button
                android:text="Iniciar Evaluación"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>